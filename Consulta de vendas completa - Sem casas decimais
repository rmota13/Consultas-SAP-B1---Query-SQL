SELECT 
    T0.DocNum AS 'Numero_Interno_SAP',
    T0.Serial AS 'NÂº_NF',
    T0.DocDate AS 'Data_Documento',
    T0.DocDueDate AS 'Data_Vencimento',
    T0.CardCode AS 'Codigo_Cliente',
    T0.CardName AS 'Nome_Cliente',
    T3.SlpName AS 'Vendedor',
    T1.ItemCode AS 'Codigo_Item',
    T1.CFOPCode AS 'CFOP',
    T5.Usage AS 'Uso_Principal',
    CONVERT(INT, T1.Quantity) AS 'Quantidade_Vendida',
    CAST(T1.Price AS DECIMAL(19,2)) AS 'Preco_Unitario',
    CAST(T1.LineTotal AS DECIMAL(19,2)) AS 'Total_Linha_Sem_Imposto',
    CAST(T0.TotalExpns AS DECIMAL(19,2)) AS 'Despesas_Adicionais_Doc',
    CAST(T0.DiscSum AS DECIMAL(19,2)) AS 'Desconto_Total_Doc',
    CAST((T0.DocTotal - T0.VatSum) AS DECIMAL(19,2)) AS 'Total_Doc_Sem_Imposto',
    CAST(T0.DocTotal AS DECIMAL(19,2)) AS 'Total_Geral_Documento',
    T6.PymntGroup AS 'Condicao_Pagamento'
FROM OINV T0
INNER JOIN INV1 T1 ON T0.DocEntry = T1.DocEntry
LEFT JOIN OSLP T3 ON T0.SlpCode = T3.SlpCode
LEFT JOIN OUSG T5 ON T1.Usage = T5.ID
LEFT JOIN OCTG T6 ON T0.GroupNum = T6.GroupNum
WHERE T0.CANCELED <> 'Y'
ORDER BY T0.DocNum DESC
